<%= form_for @genre do |f| %>

  <ul>
    <% @genre.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>


<div class="form-group">
  <label>Name</label>
  <%= f.text_field :name, placeholder: "Genre Name", class: "form-control" %>
</div>

<%= f.submit (@genre.new_record? ? "Create" : "Update"), class: "btn btn-default" %>
<% end %>
