<%= form_for @song do |f| %>

  <ul>
    <% @song.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>


<div class="form-group">
  <label>Title</label>
  <%= f.text_field :title, placeholder: "Song Title", class: "form-control" %>
</div>

<div class="form-group">
  <label>Release year</label><br>
  <%= f.select :release_year, (Time.zone.now.year - 100)..(Time.zone.now.year + 1), prompt: "Select a year", class: "form-control" %>
</div>

<div class="form-group">
  <label>Genre</label>
  <%= f.text_field :genre, placeholder: "Song Genre", class: "form-control" %>
</div>

<div class="form-group">
  <label>Artwork</label>
  <%= f.text_field :artwork_url, placeholder: "Song Artwork", class: "form-control" %>
</div>

<div class="form-group">
  <label>Album</label>
  <%= f.text_field :album, placeholder: "Song Album", class: "form-control" %>
</div>

<div class="form-group">
  <label>Artist</label><br>
  <!-- <%= f.collection_select(:artist_id, Artist.all, :id, :name)%> -->
  <%= f.text_field :artist, placeholder: "Artist", class: "form-control" %>
</div>



  <%= f.submit (@song.new_record? ? "Create" : "Update"), class: "btn btn-default" %>
<% end %>
